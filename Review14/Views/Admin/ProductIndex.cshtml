@model IEnumerable<Review14.Models.Product>
@{
    ViewData["Title"] = "Admin - ProducIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gummy Kingdoms Products</h1>

<table class="products-table">
    <tr>
        <th>
            <label>Product Name</label>
        </th>
        <th>

        </th>
        <th>
            <label>Price</label>
        </th>
        <th>
            <label>Description</label>
        </th>
        <th>
            <label>Rating</label>
        </th>
        <th>

        </th>
        <th>

        </th>
    </tr>

</table>

    @foreach (var product in Model)
    {
   
    <a href=@Url.Action("Details/" + @product.ProductId + "",  "Product")>
    <div class="products-display">
        <h2>
            @Html.DisplayFor(model => product.Name)
        </h2>
        <h2>
            <img src="@Url.Content(product.Img)" alt="@product.ImgAlt" class="product-image" />
        </h2>
        <h2>
            @Html.DisplayFor(model => product.Price)
        </h2>
        <h2 class="products-description">
            @Html.DisplayFor(model => product.Description)
        </h2>
        <h2>
            @Html.DisplayFor(model => product.Rating)
        </h2>
        <h2>
            @Html.ActionLink("Edit", "EditProduct", new { id = product.ProductId })
        </h2>
        <h2>
            @Html.ActionLink("Delete", "Delete", "Product", new { id = product.ProductId })
        </h2>

    </div>
        </a>
    }
